<div class="player workshop-player">
	<h2><%= @workshop.title %></h2>
	<div class="w-summary">
		<%= raw @workshop.summary %>
		<span class="more">See More...</span>
	</div>
	<div class="w-content">
		<%= raw @workshop.content %>
		<span class="less">See Less</span>
	</div>
</div>

<h1>Workshops</h1>

<%= render 'workshops/calendar' %>

<h1>Booking Mark</h1>
<%= render 'workshops/booking' %>

<% content_for :top do %>
	<div class="block2">
      <div class="flexslider">
         <ul class="slides">
          <li><%= image_tag url_for_cdn("https://s3-us-west-1.amazonaws.com/markstephensyoga/uploads/images/slide-ytt-summer.jpg") %></li>
          <li><%= image_tag url_for_cdn("https://s3-us-west-1.amazonaws.com/markstephensyoga/uploads/images/slide-ytt-retreat.jpg") %></li>
          <li><%= image_tag url_for_cdn("https://s3-us-west-1.amazonaws.com/markstephensyoga/uploads/images/slide-refine.jpg") %></li>
          <li><%= image_tag url_for_cdn("https://s3-us-west-1.amazonaws.com/markstephensyoga/uploads/images/slide-adjust.jpg") %></li>
         </ul>
      </div>
	 </div>
<% end %>
